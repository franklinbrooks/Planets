          <div class="input-field inline">Enter your weight on Earth:
          <br>
          <br>
          <br>
          <form>
          <input class="input" type="text" name="weight" placeholder="Weight" required >
          </div>
          <button class="waves-effect waves-light btn" onclick="weightOnJupiter(<%= planet.gravity %>)">SUBMIT</button>
          </form>
          <p id="jupiterAnswer">&nbsp;</p>
        </div>
